@inject IJSRuntime jsRuntime
@code {
    public string CodeTheme = ""+
    "settings put system persist.sys.oppo.theme_uuid -1\n"+
    "settings put system persist.sys.oplus.theme_uuid -1\n"+
    "settings put system persist.sys.trial.theme 0\n"+
    "settings put secure persist.sys.oppo.theme_uuid -1\n"+
    "settings put secure persist.sys.oplus.theme_uuid -1\n"+
    "settings put secure persist.sys.trial.theme 0\n";
    public string CodeFont = ""+
    "settings put system persist.sys.trial.font 0\n"+
    "settings put secure persist.sys.trial.font 0\n";
    public string CodeWallpaper = ""+
    "settings put system persist.sys.oplus.live_wp_uuid default_live_wp_package_name\n"+
    "settings put system persist.sys.oppo.live_wp_uuid -1\n"+
    "settings put system persist.sys.trial.live_wp 0\n"+
    "settings put secure persist.sys.oplus.live_wp_uuid default_live_wp_package_name\n"+
    "settings put secure persist.sys.oppo.live_wp_uuid -1\n"+
    "settings put secure persist.sys.trial.live_wp 0\n";

    protected async Task copyText(string str)
    {
        await jsRuntime.InvokeVoidAsync("navigator.clipboard.writeText", str);
        await jsRuntime.InvokeVoidAsync("alert", "Code copied to clipboard.");
    }
    protected override async Task OnInitializedAsync()
    {
        await jsRuntime.InvokeVoidAsync("animatePage");
        await jsRuntime.InvokeVoidAsync("animatePageObserve");
    }
    protected async Task connectDevice(){
        await jsRuntime.InvokeVoidAsync("connectADB", "connectedData");
    }
}

