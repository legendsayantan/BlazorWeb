@page "/debloat"

<PageTitle>Online Android Debloater</PageTitle>
<h1 class="text center">Online Android Debloater</h1>
<div class="text small">
    <h5>Have a phone full of bloatwares? Clean them up !</h5>
    <p>
        This project is based on <a href="https://github.com/0x192/universal-android-debloater">Universal Android Debloater</a>. Credits to them for providing with resources.
    </p>
</div>
<section>

</section>
<div class="text">
    <h3 class="center hiddenY" style=" margin:0px;">Online Unlocker</h3>
    <div class="center" style=" margin:0px; padding:0px; display:block; flex-direction:column">
        <div id="connector">
            <ol class="center" style="flex-direction:column">
                <li class="hidden">Turn on developer options</li>
                <li class="hidden" style="transition-delay:200ms">Enable USB debugging in developer options</li>
                <li class="hidden" style="transition-delay:400ms">Turn on 'Disable Permission Monitoring' in developer options</li>
                <li class="hidden" style="transition-delay:600ms">Click on the button below to connect the device through USB.</li>
            </ol>
            <br />
            <div class="container">
                <a class="btn flex-row" style="margin:0px;" @onclick="@(() => connectDevice())">
                    Connect a device
                </a>
            </div>
        </div>
        <p class="center" id="connectedData" style="padding-bottom:0px"></p>
        <br />
        <div class="center" id="deviceControl" style="display: none; padding-top:0px">
            <p class="center" >6. Now choose any trial from Theme store, then select what you chose.</p>
            <div class="row">
                <div class="container" style="width: min-content">
                    <a class="btn flex-row" style="margin:10px 0px; " @onclick="@(() => executePatch(CodeTheme))">
                        Theme
                    </a>
                </div>
                <div class="container" style="width: min-content">
                    <a class="btn flex-row" style="margin:10px 0px;" @onclick="@(() => executePatch(CodeFont))">
                        Font
                    </a>
                </div>
                <div class="container" style="width: min-content">
                    <a class="btn flex-row" style="margin:10px 0px;" @onclick="@(() => executePatch(CodeWallpaper))">
                        Live wallpaper
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    code {
        color: white;
        white-space: break-spaces;
        background-color: #133054;
        padding: 3px;
        border-radius: 6px;
    }
    .center {
        display: flex;
        flex-wrap: wrap;
        padding: 25px;
        justify-content: center;
        align-content: center;
        color: powderblue;
        font-family: 'Palatino Linotype';
    }

    .heading {
        margin-top: 100px;
        margin-bottom: 100px;
    }

    .text {
        color: #55b9f3;
    }

    p {
        color: powderblue;
        justify-content: center;
    }

    a:link {
        color: #55b9f3;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    .btnx:hover {
        color: #55b9f3;
        background-color: #0F2CD4;
    }

    .btnx {
        color: #0F2CD4;
        background-color: #55b9f3;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

        .container:link {
            color: white;
        }

    .btn {
        font-size: 1.0rem;
        padding: 1rem 3rem;
        color: #f4f4f4;
        text-transform: uppercase;
        text-decoration: none;
        border: 1px solid #55b9f3;
        position: relative;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

        .btn:hover {
            box-shadow: 1px 1px 25px 10px #55b9f3;
            text-decoration: none;
            color: powderblue;
        }

        .btn:before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient( 120deg, transparent, #55b9f3, transparent );
            transition: all 650ms;
        }

        .btn:hover:before {
            left: 100%;
        }
    input[type=button]{
        background-color: #0F2CD4;
        color: powderblue;
    }

    input[type=button]:hover{
        background-color: black;
            color: #55b9f3;
    }
</style>
@inject IJSRuntime jsRuntime
@code {
    public string CodeTheme = "" +
    "settings put system persist.sys.oppo.theme_uuid -1\n" +
    "settings put system persist.sys.oplus.theme_uuid -1\n" +
    "settings put system persist.sys.trial.theme 0\n" +
    "settings put secure persist.sys.oppo.theme_uuid -1\n" +
    "settings put secure persist.sys.oplus.theme_uuid -1\n" +
    "settings put secure persist.sys.trial.theme 0\n";
    public string CodeFont = "" +
    "settings put system persist.sys.trial.font 0\n" +
    "settings put secure persist.sys.trial.font 0\n";
    public string CodeWallpaper = "" +
    "settings put system persist.sys.oplus.live_wp_uuid default_live_wp_package_name\n" +
    "settings put system persist.sys.oppo.live_wp_uuid -1\n" +
    "settings put system persist.sys.trial.live_wp 0\n" +
    "settings put secure persist.sys.oplus.live_wp_uuid default_live_wp_package_name\n" +
    "settings put secure persist.sys.oppo.live_wp_uuid -1\n" +
    "settings put secure persist.sys.trial.live_wp 0\n";

    protected async Task copyText(string str)
    {
        await jsRuntime.InvokeVoidAsync("navigator.clipboard.writeText", str);
        await jsRuntime.InvokeVoidAsync("alert", "Code copied to clipboard.");
    }
    protected override async Task OnInitializedAsync()
    {
        await jsRuntime.InvokeVoidAsync("animatePage");
        await jsRuntime.InvokeVoidAsync("animatePageObserve");
    }
    protected async Task connectDevice()
    {
        await jsRuntime.InvokeVoidAsync("connectADB","connector","connectedData","deviceControl");
    }
    protected async Task executePatch(String code){
        await jsRuntime.InvokeVoidAsync("executeOnShell", code);
    }
}

