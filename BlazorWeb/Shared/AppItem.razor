<div class="cont" @onclick="@onclick">
    <div style="display: flex; flex-direction: row; flex-wrap:wrap; align-items: flex-start; margin: 0px;padding:0px">
        <h5>
            @info.id
        </h5>
        <p style="margin: 0px 10px;font-size:small;">@("Removal : " + info.removal)</p>
    </div>
    <p class="description">@info.description
    @if (!(info.url??"").Equals(""))
    {

        @if (info.url.StartsWith("link-->"))
        {
            <a class="description" style="margin: 0px 10px;" target="_blank" href="@info.url.Replace("link-->","")">Link</a>
        }
        else
        {
            <a class="description" style="margin: 0px 10px;" target="_blank" href="@info.url">Reference</a>
        }
    }
    </p>

</div>
<style>
    .cont {
        padding: 0.5rem;
        font-size:small;
        border-radius: 1rem;
        border-color: rgba(128, 128, 128, 0.5);
        border-width: 5px;
        display: block;
        margin: 2.5px;
    }

    h5 {
        margin: 0px;
        font-size:15px;
        color: aliceblue;
    }

    .cont:hover {
        background-color: rgba(128, 128, 128, 0.25);
    }

    .description {
        font-size: 10px;
        margin: 0%;
    }

    div {
        margin: 0px;
    }
</style>
@code {
    [Parameter]
    public AppInfo? info { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> onclick { get; set; }
}
